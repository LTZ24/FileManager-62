# ==========================================================================
# STRICT SECURITY — Block ALL access to /data/credentials
# Contains: Google Service Account JSON key — MUST NEVER be served
# ==========================================================================
Options -Indexes -ExecCGI

# Deny everything (Apache 2.4+ / 2.2 fallback)
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Kill PHP engine
<IfModule mod_php.c>
    php_flag engine off
</IfModule>
<IfModule mod_php7.c>
    php_flag engine off
</IfModule>
<IfModule mod_php8.c>
    php_flag engine off
</IfModule>

# Block every known file extension
<FilesMatch ".*">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Deny from all
    </IfModule>
</FilesMatch>
